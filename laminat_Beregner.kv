<MyW>:
    velg_enhet: VE
    lengde_rom: LR
    lengde_laminat: LL
    bredde_rom: BR
    bredde_laminat: BL

    GridLayout:
        cols:2
        size: root.width, root.height

        Label:
            text: "velg enhet"

        Spinner:
            id: VE

            text: "mm"
            values: ["mm", "cm", "m"]
            on_text: root.spinner_clicked(VE.text)


        GridLayout:
            cols:3

            Label:
                text: "Lengde rom: "

            TextInput:
                id: LR
                halign: 'left'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                multiline:False
                input_filter: 'float'
            
            Label:
                text: VE.text
                text_size: self.size
                size_hint: (1,1)
                halign: "left"
                valign: "middle"
            

            Label:
                text: "Bredde rom: "

            TextInput:
                id: BR
                halign: 'left'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                multiline:False
                input_filter: 'float'
            
            Label:
                text: VE.text
                text_size: self.size
                size_hint: (1,1)
                halign: "left"
                valign: "middle"
                
            
            Label:
                text: "Lengde laminat: "

            TextInput:
                id: LL
                halign: 'left'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                multiline:False
                input_filter: 'float'
            
            Label:
                text: VE.text
                text_size: self.size
                size_hint: (1,1)
                halign: "left"
                valign: "middle"
                
                
            
            Label:
                text: "Bredde laminat: "

            TextInput:
                id: BL
                halign: 'left'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                multiline:False
                input_filter: 'float'
            
            Label:
                text: VE.text
                text_size: self.size
                size_hint: (1,1)
                halign: "left"
                valign: "middle"
                
        Button:
            text: "Beregn"
            on_press: root.btn()
