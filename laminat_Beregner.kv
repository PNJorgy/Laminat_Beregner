<WindowManager>:
    MenuScreen:
    LaminatBeregner:

<MenuScreen>:
    name: 'menu'

    MDFloatLayout:
        size: root.width, root.height
        


        MDLabel:
            font_name: 'Font/consolaz.ttf'
            font_size: '20sp'
            text: "Welcome To An EmberFiles Product" 
            pos_hint: {"x": .30, "y": .45}
        
        MDRoundFlatIconButton:
            padding: ['30dp','10dp','250dp','10dp']
            pos_hint: {"x": .05, "y": .75}
            line_color: "red"
            icon: 'icon/LB2.png'
            icon_size: 32
            halign: 'left'
            on_release:
                app.root.current = 'LB'
                root.manager.transition.direction = 'left'
            StackLayout:
                pos: self.parent.pos
                size: self.parent.size
                orientation: 'lr-tb'
                MDLabel:
                    font_name: 'Font/cour.ttf'
                    font_size: '16sp'
                    halign: 'right'
                    bold: True
                    size_hint: None,1
                    width: 250
                    text: 'Laminat/Gulv Beregner'
                    text_color: 'white'
            

<LaminatBeregner>:
    name: 'LB'

    Button:
        text: 'Back'
        on_release:
            app.root.current = 'menu'
            root.manager.transition.direction = 'right'


    

