<MyW>:
    velg_enhet: VE
    lengde_rom: LR
    lengde_laminat: LL
    bredde_rom: BR
    bredde_laminat: BL

    GridLayout:
        cols:1
        size: root.width, root.height

        Spinner:
            id: VE


            values: ["mm", "cm", "m"]
            on_text: root.spinner_clicked(VE.text)


        GridLayout:
            cols:3

            Label:
                text: "Lengde Rom: "

            TextInput:
                id: LR
                hint_text: 'Lengden P책 Rommet'
                halign: 'left'
                padding: [6,15,6,6]
                multiline:False
                input_filter: 'float'
            
            Label:
                text: VE.text
                text_size: self.size
                size_hint: (1,1)
                halign: "left"
                valign: "middle"
            

            Label:
                text: "Bredde Rom: "

            TextInput:
                id: BR
                hint_text: 'Bredden P책 Rommet'
                halign: 'left'
                padding: [6,15,6,6]
                multiline:False
                input_filter: 'float'
            
            Label:
                text: VE.text
                text_size: self.size
                size_hint: (1,1)
                halign: "left"
                valign: "middle"
                
            
            Label:
                text: "Lengde Laminat: "

            TextInput:
                id: LL
                hint_text: 'Lengden P책 Laminaten'
                halign: 'left'
                padding: [6,15,6,6]
                multiline:False
                input_filter: 'float'
            
            Label:
                text: VE.text
                text_size: self.size
                size_hint: (1,1)
                halign: "left"
                valign: "middle"
                
                
            
            Label:
                text: "Bredde Laminat: "

            TextInput:
                id: BL
                hint_text: 'Bredden P책 Laminaten'
                halign: 'left'
                padding: [6,15,6,6]
                multiline:False
                input_filter: 'float'
            
            Label:
                text: VE.text
                text_size: self.size
                size_hint: (1,1)
                halign: "left"
                valign: "middle"
                
        Button:
            text: "Beregn"
            on_press: root.btn()
